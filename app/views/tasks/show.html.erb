<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Edit task", edit_task_path %>

<%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe,
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Back to list", tasks_path %>
